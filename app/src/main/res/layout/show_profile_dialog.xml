<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/popupbuttonnn"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_3"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:id="@+id/show_profile_photo"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_profile_photo"
            android:layout_centerHorizontal="true"
            android:id="@+id/show_profile_nickname_layout"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="LV.1"
            android:textColor="#111111"
            android:id="@+id/show_profile_level"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="진혜민가나다라"
            android:textColor="#111111"
            android:layout_toRightOf="@id/show_profile_level"
            android:id="@+id/show_profile_nickname"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/show_profile_statement_layout"
            android:layout_below="@+id/show_profile_nickname_layout">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ddfdfdddd.dfddfddfdfdfddfdfdfdfdfdfdfdfdddfddfd "
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:id="@+id/show_profile_statement"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancelbutton"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/show_profile_statement_layout"
            android:id="@+id/show_profile_cancelBtn"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/follwbutton"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/show_profile_statement_layout"
            android:id="@+id/show_profile_followBtn"/>

    </RelativeLayout>

</RelativeLayout>